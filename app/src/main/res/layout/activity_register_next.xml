<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.moka.carsharing.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="换电汽车系统注册"
        app:isShowBack="false"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定成功后请您开启系统通知，结束电池电量的信息"
        android:textColor="@color/register_text"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_vin"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/vin"/>
        <EditText
            android:id="@+id/et_car_id"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_vin"
            android:layout_toStartOf="@+id/iv_pigeon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入您车架号"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:background="@null" />
        <ImageView
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/iv_pigeon"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pigeon"/>
    </RelativeLayout>
    <View
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray">
    </View>
    <Button
        android:id="@+id/btn_submit"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认绑定"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/button"/>
</LinearLayout>